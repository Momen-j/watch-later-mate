{
  "manifest_version": 3,
  "name": "Playlist Pal",
  "version": "1.0.0",
  "description": "Helps you catch up with videos from any playlist of your choosing",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "webNavigation", "identity", "tabs", "storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://*.googleapis.com/"
    ],
  "oauth2": {
    "client_id": "",
    "scopes": ["https://www.googleapis.com/auth/youtube.readonly"]
  }
}
