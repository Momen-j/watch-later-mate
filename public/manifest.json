{
  "manifest_version": 3,
  "name": "Playlist Pal",
  "version": "1.0.0",
  "description": "Helps you catch up with videos from any playlist of your choosing",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "webNavigation", "identity", "tabs", "storage"],
  "host_permissions": ["*://*.youtube.com/*", "https://*.googleapis.com/"],
  "oauth2": {
    "client_id": "52990221904-s859o5j923ncjlleds8f82chb5m30s02.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.readonly",
      "https://www.googleapis.com/auth/youtube"
    ]
  }
}
